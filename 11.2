C++
#include <iostream>
#include <cmath>

using namespace std;

int main() {
  int n;
  cout << "Введите n: ";
  cin >> n;

  int a[n];
  for (int i = 0; i < n; i++) {
    cin >> a[i];
  }

  int sum = 0;
  for (int i = 0; i < n; i++) {
    sum += a[i];
  }

  cout << "Сумма элементов массива: " << sum << endl;

  return 0;
}

