#include <stdio.h>

int main() {
  int n;
  printf("Введите n: ");
  scanf("%d", &n);

  int a[n];
  for (int i = 0; i < n; i++) {
    scanf("%d", &a[i]);
  }

  int sum = 0;
  for (int i = 0; i < n; i++) {
    sum += a[i];
  }

  printf("Сумма элементов массива: %d\n", sum);

  return 0;
}
