C++
#include <iostream>
#include <cmath>

using namespace std;

int main() {
  double x;
  cout << "Введите x: ";
  cin >> x;

  double y;
  if (x > 0) {
    y = 1 + 2 * sin(x * x);
  } else {
    y = sin(x * x) / (x + 1);
  }

  cout << "y = " << y << endl;

  return 0;
}

