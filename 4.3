#include <stdio.h>
#include <math.h>

int main() {
  double x;
  printf("Введите x: ");
  scanf("%lf", &x);

  double y;
  if (x > 0) {
    y = 1 + 2 * sin(x * x);
  } else {
    y = sin(x * x) / (x + 1);
  }

  printf("y = %lf\n", y);

  return 0;
}
